<table>

	<tr>

		<th>Original URL</th>
		<th>Shortened URL</th>

	</tr>

	<% @urls.each do |link| %>

		<tr>
		<td> <a href = <%= link.long_url %> > <%= link.long_url %></a></td>
		<td> <%= link_to link.short_url, controller: :urls, action: :short, id: link %></td>
		<td><%= link_to 'Show', url_path(link) %></td>
		<td><%= link_to 'Delete', url_path(link), method: :delete, data: { confirm: 'Are you sure?' } %></td>

		</tr>

		<% end %>

	</table>

	<p><%= link_to "Shorten a Url!", new_url_path %></p>

